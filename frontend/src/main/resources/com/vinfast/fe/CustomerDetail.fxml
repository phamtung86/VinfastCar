                            <Label text="Mã khách hàng :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextField fx:id="txtCustomerId" prefHeight="26.0" prefWidth="229.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label text="Tên khách hàng :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextField fx:id="txtCustomerName" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Label text="Email :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                            <Label text="Số điện thoại :" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                            <TextField fx:id="txtPhone" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                            <Label text="Địa chỉ :" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                            <TextField fx:id="txtAddress" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                            <columnConstraints>
                                <ColumnConstraints />
                                <ColumnConstraints />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>
                    </VBox>
                    <Separator orientation="VERTICAL" prefHeight="259.0" prefWidth="66.0" />

                    <!-- VBox bọc GridPane cho thông tin xe -->
                    <VBox alignment="TOP_RIGHT" prefHeight="226.0" prefWidth="377.0" HBox.hgrow="ALWAYS">
                        <GridPane alignment="TOP_CENTER" hgap="10" prefHeight="227.0" prefWidth="351.0" vgap="10">
                            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>

                            <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Thông tin xe" GridPane.columnSpan="2" />

                            <Label text="Mã xe :" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                            <TextField fx:id="txtVehicleId" prefHeight="26.0" prefWidth="194.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <Label text="Tên xe :" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                            <TextField fx:id="txtVehicleName" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Label text="Giá xe :" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                            <TextField fx:id="txtVehiclePrice" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            <columnConstraints>
                                <ColumnConstraints />
                                <ColumnConstraints />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                                <RowConstraints />
                            </rowConstraints>
                        </GridPane>
                    </VBox>
                </children>
            </HBox>
        </children>
