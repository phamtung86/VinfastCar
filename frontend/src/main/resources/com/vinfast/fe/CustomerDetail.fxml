        <children>
            <TableView fx:id="tableView" AnchorPane.topAnchor="52.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0">
                <columns>
                    <TableColumn fx:id="colSerial" prefWidth="50" text="STT" />
                    <TableColumn fx:id="colCustomerName" prefWidth="120" text="Tên khách hàng" />
                    <TableColumn fx:id="colPhone" prefWidth="100" text="Số điện thoại" />
                    <TableColumn fx:id="colEmail" prefWidth="150" text="Email" />
                    <TableColumn fx:id="colAddress" prefWidth="150" text="Địa chỉ" />
                    <TableColumn fx:id="colIdCar" prefWidth="40" text="Mã xe" />
                    <TableColumn fx:id="colPurchaseDate" prefWidth="100" text="Ngày mua" />
                    <TableColumn fx:id="colPrice" prefWidth="130" text="Giá xe" />
                </columns>
            </TableView>
            <Label layoutX="14.0" layoutY="14.0" prefHeight="26.0" prefWidth="132.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Thông tin chi tiết" />

        </children></AnchorPane>
